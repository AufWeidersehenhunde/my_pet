<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <!-- Фотография питомца -->
    <ImageView
        android:id="@+id/pet_photo"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp">

        <!-- Имя питомца и дата приема -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/pet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Иннокентий"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/appointment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21.08.22"
                android:textSize="14sp"
                />
        </LinearLayout>

        <!-- Описание приема -->
        <TextView
            android:id="@+id/appointment_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Диагностика и лечение пореза на лапе"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <!-- Иконки документов -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/document_icon_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/max" />

            <View
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/document_icon_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/max" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>